<style type="text/css">
.slick-dots li button:before {
    color: rgba(0,0,0,0.8);
}
.slick-dots li.slick-active button:before {
    color: black;
}

.blockquote-container {
    padding: 11px 22px;
    margin: 0 0 22px;
    border-left: none;
    position: absolute;
    bottom: 10%;
    width: 45%;
    left: 7%;
    color: white;
    height: 60%;
}

blockquote {
    border-left: none;
    font-family: "Proxima-Nova", "Helvetica Neue", Helvetica, Arial, sans-serif;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

blockquote cite {
    bottom: -22px;
    position: relative;
}

blockquote cite h2 {
    font-size: 32px;
}

blockquote cite h2 small {
    font-size: 65%;
    color: white;
}

blockquote cite h2 small:before {
    content: none;
}

blockquote p {
    font-size: 1em;
    border-left: none;
    color: white;
    font-weight: normal;
}

blockquote p b {
    font-weight: 900;
}

blockquote p:before, blockquote p span.ending-quote:after {
	position: absolute;
	font-size: 45px;
	padding: 10px;
	line-height: 1;
    font-weight: 400;
	color: white;
}
blockquote p:before {
    content: "\201C";
    top: -8px;
    left: -8px;
}


blockquote p span.ending-quote:after {
    content: "\201D";
    margin-top: -18px;
    margin-left: -6px;
}

.next {
    cursor: pointer;
    height: 50px;
    left: 95%;
    position: absolute;
    top: 65%;
    transform: translateX(-50%) translateY(-50%);
    transition: transform .1s;
    width: 50px;
    z-index: 10;
}
.next-top, .next-bottom {
  background-color: #666;
  height: 4px;
  left: -5px;
  position: absolute;
  top: 50%;
  width: 100%;
}
.next-top:after, .next-bottom:after {
  background-color: #fff;
  content: '';
  height: 100%;
  position: absolute;
  top: 0;
  transition: all 0.15s;
}
.next-top {
  transform: rotate(45deg);
  transform-origin: bottom right;
}
.next-top:after {
  left: 100%;
  right: 0;
  transition-delay: 0s;
}
.next-bottom {
  transform: rotate(-45deg);
  transform-origin: top right;
}
.next-bottom:after {
  left: 0;
  right: 100%;
  transition-delay: 0.15s;
}
.next:hover .next-top:after {
  left: 0;
  transition-delay: 0.15s;
}
.next:hover .next-bottom:after {
  right: 0;
  transition-delay: 0s;
}
.next:active {
  transform: translateX(-50%) translateY(-50%) scale(0.9);
}

.prev {
  cursor: pointer;
    height: 120px;
    left: 5%;
    position: absolute;
    top: 65%;
    transform: translateX(-50%) translateY(-50%);
    transition: transform .1s;
    width: 50px;
    z-index: 10;
}
.prev-top, .prev-bottom {
  background-color: #666;
  height: 4px;
  left: -5px;
  position: absolute;
  top: 50%;
  width: 100%;
}
.prev-top:after, .prev-bottom:after {
  background-color: #fff;
  content: '';
  height: 100%;
  position: absolute;
  top: 0;
  transition: all 0.15s;
}
.prev-top {
  transform: rotate(-45deg);
  transform-origin: bottom left;
}
.prev-top:after {
  left: 100%;
  right: 0;
  transition-delay: 0.15s;
}
.prev-bottom {
  transform: rotate(45deg);
  transform-origin: bottom left;
}
.prev-bottom:after {
  left: 0;
  right: 100%;
  transition-delay: 0s;
}
.prev:hover .prev-top:after {
  left: 0;
  transition-delay: 0s;
}
.prev:hover .prev-bottom:after {
  right: 0;
  transition-delay: 0.15s;
}
.prev:active {
  transform: translateX(-50%) translateY(-50%) scale(0.9);
}

.no-fouc {
	display: none;
}

.slider-background-radial {
    width: 100%;
    height: 78%;
    content: '';
    position: absolute;
    display: block;
    z-index: 0;
    min-height: 500px;
    background: radial-gradient(500px 500px at 74% 70%, #545454, #252525);
