    }
}
@media (max-width: 767px) {
    blockquote {
        position: relative;
        top: inherit;
        left: inherit;
        transform: none;
    }
    blockquote:before, blockquote:after {
        font-size: 70px;
    }
    blockquote:before {
	    top: -30px;
        left: -20px;
    }

    blockquote:after {
        right: 0px;
        bottom: -65px;
    }
    .slick-arrow {
        display: none !important;
    }
    .blockquote-container {
        padding: 22px;
        position: absolute;
        width: 100%;
        left: 0%;
        height: auto;
        margin: 0px;
        bottom: 0px;
        background-color: rgba(37, 37, 37, 1);
    }
    blockquote p {
        font-size: 0.8em;
    }
    blockquote cite h2 {
        font-size: 25px;
    }
    blockquote cite {
        position: relative;
    }
}
@media (max-width: 490px) {
    .fw-image-carousel {
        margin-bottom: 90px;
    }
}
</style>

{% assign id = uniqueid -%}

<div id="{{ id }}" class="no-fouc">
    {{ blockContent }}
</div>

<div id="{{ id }}-nav" style="margin-top: -80px;">
  <div><img src="/Content/HR/ds_thumb.png" class="" style="border: 3px solid white; max-width: 200px;margin: 0 auto;"/></div>
  <div><img src="/Content/HR/l_thumb.png" class="" style="border: 3px solid white; max-width: 200px;margin: 0 auto;"/></div>
  <div><img src="/Content/HR/lc_thumb.png" class="" style="border: 3px solid white; max-width: 200px;margin: 0 auto;"/></div>
  <div><img src="/Content/HR/dh_thumb.png" class="" style="border: 3px solid white; max-width: 200px;margin: 0 auto;"/></div>
  <div><img src="/Content/HR/mk_thumb.png" class="" style="border: 3px solid white; max-width: 200px;margin: 0 auto;"/></div>
</div>

<script>

//initialise carousel
function slickCarousel() {
    $('#{{ id }}').slick({
      dots: false,
      infinite: true,
      autoplay: true,
      autoplaySpeed: 553200,
      slidesToShow: {{ slidestoshow }},
      slidesToScroll: {{ slidestoscroll }},
      adaptiveHeight: {{ adaptiveHeight }},
      fade: {{ fade }},
      focusOnSelect: true,
      arrows: false
    });

    $('#{{ id }}-nav').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      asNavFor: '#{{ id }}',
      dots: true,
      focusOnSelect: true,
      centerMode: true,
      centerPadding: '60px',
      arrows: false,
      nextArrow: '<div class="next"><div class="next-top"></div><div class="next-bottom"></div></div>',
      prevArrow: '<div class="prev"><div class="prev-top"></div><div class="prev-bottom"></div></div>',
      responsive: [
        {
          breakpoint: 768,
          settings: {
            arrows: false,
            centerMode: true,
            centerPadding: '40px',
            slidesToShow: 3
          }
        },
        {
          breakpoint: 480,
          settings: {
            arrows: false,
            centerMode: true,
            centerPadding: '40px',
            slidesToShow: 1
          }
        }
      ]
    });
}

$( document ).ready(function() {
    $('.no-fouc').removeClass('no-fouc');
    $(slickCarousel());
});
</script>

{% comment %}
************************ PARAMETERS ********************
{% endcomment %}
slidestoshow     - 1
slidestoscroll   - 1
adaptiveHeight   - false
fade             - true
