{
	"header": {
		"title": "Location"
	},
	"displayOptions":{
		"style":"grid",
		"contentWidthRatio":5,
	    "itemDisplayOptions":{
	        "indicatorAspectRatio":1,
	        "textPosition":"none"
	    },
		"colors":{
	        "brand":{
	            "primary":"#121212",
	            "primaryAccent":"#FFFFFF"
	        },
	        "theme":{
	            "primary":"#121212",
	            "primaryAccent":"#FFFFFF"
	        },
	        "topBar":{
	            "primary":"#121212",
	            "primaryAccent":"#FFFFFF"
	        },
	        "bottomBar":{
	            "primary":"#121212",
	            "primaryAccent":"#FFFFFF"
	        },
	        "brandableElements":"{{colors:brand}}"
	    }
	},
	"items": [
	      {% assign campusesSorted = Campuses | Sort:'Order','Asc' %}
	      {% for campus in campusesSorted sort:'Order','Asc' %}
	        {% assign campusSlug = campus | Attribute:'Slug' %}
	        {
				"images":[
				    {"width": 668,
					"url":"https://app.secc.org/webhooks/ImageGenerator.ashx/location/{{campus.Guid}}?bgcolor=121212&mode=crop&s.roundcorners=10"}
					],
				"title":"{{campus.Name}}",
				"actions": [{
					"handler": "list",
					"url": "https://app.secc.org/webhooks/SubSplash.ashx/bulletin/campuses/{{campus.Guid}}"
				}]
			}{%- if forloop.last -%}{%- else -%},{%- endif -%}
          {% endfor %}
	]
}
